{
  "name": "pokemon-catalog",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy-component:run": "cypress run --component",
    "cy-e2e:open": "cypress open --config-file cypress.e2e.config.ts",
    "cy-e2e:run": "cypress run --config-file cypress.e2e.config.ts",
    "ci:copy-component-reports": "mkdir -p target/reports && mv .nyc_output/out.json target/reports/component.json && mv coverage target/component",
    "ci:copy-integration-reports": "mkdir -p target/reports && mv .nyc_output/out.json target/reports/integration.json && mv coverage target/integration",
    "ci:cy-run-component": "npm run cy-component:run && npm run ci:copy-component-reports",
    "ci:cy-run": " ng run pokemon-catalog:cypress-run && npm run ci:cy-coverage && npm run ci:copy-integration-reports",
    "ci:cy-run-e2e": "npm run cy-e2e:run",
    "ci:cy-coverage": "nyc report --reporter=lcov --reporter=text-summary"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.2.0",
    "@angular/common": "^14.2.0",
    "@angular/compiler": "^14.2.0",
    "@angular/core": "^14.2.0",
    "@angular/forms": "^14.2.0",
    "@angular/platform-browser": "^14.2.0",
    "@angular/platform-browser-dynamic": "^14.2.0",
    "@angular/router": "^14.2.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^14.1.0",
    "@angular-devkit/build-angular": "^14.2.11",
    "@angular/cli": "~14.2.11",
    "@angular/compiler-cli": "^14.2.0",
    "@cypress/code-coverage": "^3.10.6",
    "@cypress/schematic": "^2.5.0",
    "@cypress/webpack-dev-server": "^3.4.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@jsdevtools/coverage-istanbul-loader": "^3.0.5",
    "@shellygo/cypress-test-utils": "^2.0.0",
    "@types/chance": "^1.1.3",
    "@types/jasmine": "~4.0.0",
    "builder-pattern": "^2.2.0",
    "chance": "^1.1.11",
    "cypress": "^13.3.1",
    "istanbul-lib-coverage": "^3.2.0",
    "jasmine-core": "~4.3.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "mocha-junit-reporter": "^2.2.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "nyc": "^15.1.0",
    "ts-loader": "^9.4.3",
    "typescript": "~4.7.2",
    "webpack": "^5.84.1",
    "webpack-dev-server": "^4.15.0"
  }
}
